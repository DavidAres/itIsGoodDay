<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/settingsFragmentTitle"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:layout_margin="18dp"
        android:textStyle="bold"
        android:text="SETTINGS"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/enableNotificationsContainer"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:paddingLeft="16dp"
        android:layout_below="@+id/settingsFragmentTitle">

        <TextView
            android:id="@+id/settingsFragmentTextSwitchNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejemplo"
            android:textColor="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:textSize="16sp"/>

        <Switch
            android:id="@+id/settingsFragmentSwitchNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:checked="false"
            android:layout_marginLeft="25dp" />

    </RelativeLayout>

</RelativeLayout>